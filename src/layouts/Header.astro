<style>
  .header {
    background-color: var(--background);
    border-bottom: var(--background-border) 1px solid;
    position: sticky;
    top: 0;
    z-index: 100;
    scroll-margin-top: 5rem;
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
    font-family: 'Montserrat Variable', sans-serif;
    font-style: italic;
    letter-spacing: -2px;
  }

  .logo:hover {
    color: var(--text-terceary);
  }
  
  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }
  
  .nav-link {
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--text-terceary);
  }
  
  .nav-link.active::after {
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--text-terceary)
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .social-link,
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }
  
  .social-link:hover{
    color: var(--text-terceary);
    transform: scale(1.5);
  }

   .theme-toggle:hover {
    color: var(--text-terceary);
  }

  .logo,
  .nav-link,
  .social-link,
  .theme-toggle {
    color: var(--text-primary);
    }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }
    
    .nav-links {
      display: none;
    }
    
    .logo {
      font-size: 1.2rem;
    }
  }
</style>

