---
import '@fontsource-variable/montserrat';
import Header from '../layouts/Header.astro';
import Footer from '../layouts/Footer.astro';
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portafolio de Yesid Sanabria - Desarrollador Full Stack" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>    
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
  </head>

  <!-- Estructuracion de componentes y paginas -->
  <body class="bg-[image:var(--background-gradient)] transition-colors duration-300">
  <Header />
    <main>
      <slot />
    </main>
    <Footer class="text-black dark:text-white transition-colors duration-300"></Footer>
    <script src="../scripts/theme-toggle.js" is:inline></script><script src="/scripts/theme-toggle.js" defer></script>

  </body>
  

</html>

<style is:global>
  :root {
    --colobra: #000000;
    --scrollbarco: #000000;
    --primary-blue: #054faa;
    --dark-blue: #24456b;
    --text-primary: #000000;
    --text-secondary: #313131;
    --text-terceary: #054faa;
    --text-cuaterceary: #ffffff;
    --text-terceary-hover: #043775;
    --scrollbarter: #054faa;
    --background: #CDD5DB;
    --background-border: #ebebeb;

    --card-background: #CDD5DB;
    --card-text: #000000;
    --tag-color: #04254d;
    --background-gradient: linear-gradient(to bottom, #CDD5DB, #02244d);
    --background-prefoter: #02244d;
    --background-footer: #02244d;
  }
  
 
  
  .dark{
    color-scheme: dark;
    --colobra: #58A6FF;
    --scrollbarco: #000000;
    --primary-blue: #58A6FF;
    --dark-blue: #24456b;
    --text-primary: #ffffff;
    --text-secondary: #a0a0a0;
    --text-terceary: #d4af81;
    --text-cuaterceary: #000000;
    --text-terceary-hover: #a88b66;
    --scrollbarter: #054faa;
    --background: #021A37;
    --background-border: rgb(27, 27, 27);

    --card-background: #021A37;
    --card-text: #ffffff;
    --tag-color: #04254d;
    --background-gradient: linear-gradient(to bottom, #06254e, #01010c 25%, #06254e);
    --background-prefoter: #02244d;
     --background-footer: linear-gradient(to bottom, #051b35 0%, #010f20 100%);
  }

   * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }


  html {
    font-family: 'Montserrat Variable', sans-serif;
    scroll-behavior: smooth;
  }

  .card {
  background: var(--card-background);
  color: var(--card-text);
  }
 
  main {
    min-height: calc(100vh - 200px);
  }
  
  /* Scrollbar personalizada */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: var(--scrollbarco);
  }
  
  ::-webkit-scrollbar-thumb {
    background: var(--scrollbarter);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    transition-duration: 300ms;
    background: #b4aeb8;
  }
  
  /* Utilidades */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .section {
    padding: 4rem 0;
  }
</style>




