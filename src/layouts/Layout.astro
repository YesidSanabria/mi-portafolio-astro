---
import '@fontsource-variable/montserrat';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portafolio de Yesid Sanabria - Desarrollador Full Stack" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>

  <!-- Estructuracion de componentes y paginas -->
  <body class="text-black dark:text-white transition-colors duration-300">
    <Header />
    <main>
      <slot />
    </main>
    <Footer class="text-black dark:text-white transition-colors duration-300"></Footer>
    <script src="/theme-toggle.js" defer></script>
  </body>
</html>

<style is:global>
  :root {
    --colobra: #000000;
    --scrollbarco: #000000;
    --primary-blue: #054faa;
    --dark-blue: #24456b;
    --text-primary: #000000;
    --text-secondary: #313131;
    --text-terceary: #054faa;
    --text-terceary-hover: #043775;
    --scrollbarter: #054faa;
    --background: #CDD5DB;
    --background-border: #ebebeb;

    --background-gradient: linear-gradient(to bottom, #CDD5DB, #02244d);
    --background-prefoter: #02244d;
    --background-footer: #02244d;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  .dark{
    color-scheme: light dark;
    --colobra: #58A6FF;
    --scrollbarco: #000000;
    --primary-blue: #58A6FF;
    --dark-blue: #24456b;
    --text-primary: #ffffff;
    --text-secondary: #a0a0a0;
    --text-terceary: #d4af81;
    --text-terceary-hover: #a88b66;
    --scrollbarter: #054faa;
    --background: #021A37;
    --background-border: rgb(27, 27, 27);

     --background-gradient: linear-gradient(to bottom, #021124, #000000);
     --background-prefoter: #02244d;
     --background-footer: linear-gradient(to bottom, #051b35 0%, #010f20 100%);
  }


  html {
    font-family: 'Montserrat Variable', sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    background: var(--background-gradient);
    justify-content: center;
  }
 
  main {
    min-height: calc(100vh - 200px);
  }
  
  /* Scrollbar personalizada */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: var(--scrollbarco);
  }
  
  ::-webkit-scrollbar-thumb {
    background: var(--scrollbarter);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    transition-duration: 300ms;
    background: #b4aeb8;
  }
  
  /* Utilidades */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .section {
    padding: 4rem 0;
  }
  
  .text-gradient {
    background: linear-gradient(135deg, var(--primary-green), #22c55e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  
</style>




