  <style>
.hero {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh; 
  overflow-x: hidden;
  }

.container {
	display: grid;
	grid-template-columns: repeat(1, 1fr);
  grid-template-rows: repeat(1, 1fr);
  gap: 4px;
	align-items: center;
  }
  
.hero-content {
  text-align: left;
  max-width: 800px;
  margin: 0 auto;
  }

  .social {
  font-size: 1.2rem;
  font-weight: 600;
  margin-top: 60px;
  gap: 10px;
}

.social.hover {
  color: var(--primary-blue);
  transform: translateY(-3px);
}

.gr{
  margin-top: 40px;
}

.parrafosinespacio{
  width: 100%;
}
.experience {
  list-style-type: none;
  margin-top: 40px;
  margin-bottom: 0px;
}

.grids{
  width: 100%;
  display: grid;
  grid-template-columns:1fr 1fr;
  align-items: start;
  gap: 5px;
  margin: 0 auto;
}


.box{
  padding-left: 10px;
  position: relative;  
  height: 115px;
}


.box::before{
  content: '';
  position: absolute;
  width: 1px;
  height: 145%;
  background-color: var(--text-terceary);
  left: -15px;
  top: 0px; 
}

.box::after{
  content: '';
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: var(--text-terceary);
  left: -19px;
  top: 20px; 
}

/* #region Responsive */

/* Para pantallas pequeñas y medianas */
@media (max-width: 768px) {
  .hero {
    margin-top: 80px;
    flex-direction: column;
    justify-content: flex-start;
    min-height: 100vh;
  }

  .hero-content {
    text-align: center;
    padding: 0 20px;
  }

  .social {
    margin-top: 40px;
    justify-content: center;
  }

  .grids {
    grid-template-columns: 1fr;
  }

  .box {
    height: auto;
    padding-left: 0;
  }

  .box::before {
    display: none;
  }

  .box::after {
    left: -10px;
  }
}

/* Para pantallas grandes */
@media (min-width: 1024px) {
  .hero {
    min-height: 80vh;
  }

  .grids {
    grid-template-columns: 1fr 1fr 1fr; 
  }

  .box {
    height: 130px;
  }
}


/* #endregion Responsive */
 
