  <style>
.hero {
  margin-top: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh; 
  overflow-x: hidden;
  }

.container {
	width: 100%;
	display: grid;
	grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(1, 1fr);
  gap: 4px;
	align-items: center;
  }
  
.hero-content {
  text-align: left;
  max-width: 800px;
  margin: 0 auto;
  }

  /* #region Seccion Principal */

.hero-title {
  font-size: 4rem;
  font-weight: 800;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  }

.hero-subtitle {
  font-size: 1.8rem;
  padding-top: 5px;
  margin-bottom: 1rem;
	 }

.text-gradt {
  padding-left: 15px;
  }

.profile-image {
  height: 250px;
  width: 250px;
}

.pulsetxt{
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 1.2rem;
  font-weight: 600;
  color: #000000; /* Color del texto */
  margin-bottom: 10px; /* Espacio entre el texto y la imagen */
}

.social {
  font-size: 1.2rem;
  font-weight: 600;
  margin-top: 60px;
  gap: 10px;
}

.social.hover {
  color: var(--primary-blue);
  transform: translateY(-3px);
}

/* #endregion Seccion Principal */

/* #region Resposive */
@media (max-width: 768px) {
  
  .container {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 2rem;
  }

  .hero-content h1{
    font-size: 2.6rem;
  }

  .hero-content a{
    font-size: 1rem;
  }

  .hero-content h1, 
  .hero-content a.flex {
    justify-content: center;
  }

  .hero-content ul {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .social {
    height: 40px;
    width: 162px;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    margin-top: 0;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .proimage {
    margin-top: 1rem;
  }
}

/* #endregion Resposive */
